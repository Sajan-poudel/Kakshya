<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4846B3"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="start"

            android:background="#f6f4ff"
            android:src="@drawable/regpictwo" />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:src="@drawable/logokaksha" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@drawable/for_edit_text_bck"
            android:elevation="10dp"
            android:fontFamily="@font/nunito"
            android:onClick="goToRegisterActivity"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:text="Register"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/RegisterAsTeacherButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@drawable/for_edit_text_bck"
            android:fontFamily="@font/nunito"
            android:onClick="goToRegsiterAsTeacherActivity"
            android:paddingLeft="55dp"
            android:paddingRight="55dp"
            android:text="Register as Teacher"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/logInButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@drawable/for_edit_text_bck"
            android:fontFamily="@font/nunito"
            android:onClick="goToLoginActivity"
            android:paddingLeft="55dp"
            android:paddingRight="55dp"
            android:text="Log-In"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>