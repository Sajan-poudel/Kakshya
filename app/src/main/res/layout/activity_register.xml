<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="start"
                android:background="#fff5f4"
                android:src="@drawable/registrationlogo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"

                android:fontFamily="@font/montserrat"
                android:text="Regsiter"
                android:textColor="#b46159"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/registerEnterNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/for_edit_text_bck"
                android:hint="Enter Your Name"
                android:maxLines="1"
                android:padding="7dp"
                android:textAlignment="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/registerEmailIDEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/for_edit_text_bck"

                android:hint="E-Mail ID"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="7dp"
                android:textAlignment="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/registerPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/for_edit_text_bck"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="7dp"
                android:textAlignment="center"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/registerConfPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/for_edit_text_bck"
                android:hint="Re-Enter Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="7dp"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/montserrat"
                android:text="Select Subjects"
                android:textAlignment="center"
                android:textColor="#b46159"
                android:textSize="32sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/physicsSubCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Physics" />

                <CheckBox
                    android:id="@+id/chemistrySubCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chemistry" />

                <CheckBox
                    android:id="@+id/mathsSubCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mathematics" />
            </LinearLayout>

            <Button
                android:id="@+id/submitRegisterBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/register"
                android:fontFamily="@font/nunito"
                android:paddingLeft="55dp"
                android:paddingRight="55dp"
                android:text="Submit"
                android:textColor="@color/black" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>